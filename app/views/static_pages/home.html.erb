<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
      <%= link_to image_tag("chittychat_grey.gif", alt: "Chitty Chat") %>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
    <div class="center">
        <div class="hero-unit">
        <h1>Welcome to Chitty Chat</h1>
        <p>A place to chit chat with people.</p>
        <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
        or
        <%= link_to "Sign In", signin_path,
                                class: "btn btn-large btn-primary" %>
        </div>
    </div>    
  <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>