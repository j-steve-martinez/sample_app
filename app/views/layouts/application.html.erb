<!DOCTYPE html>
<html>
  <head>
    <title>
        <%= full_title(yield(:title)) %>
    </title>
    <%= stylesheet_link_tag "application", media: "all",
                                           "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>

    <%= render 'layouts/shim' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
      <%= yield %>
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
      <%= p "Server:" , request.server_software() if Rails.env.development? %>
      <%= p "Method: ", request.request_method() if Rails.env.development? %>
      <%= p 'UUID:', request.uuid() if Rails.env.development? %>
      <%= p 'IP:', request.ip() if Rails.env.development? %>
      <%= p 'FULLPATH:', request.fullpath() if Rails.env.development? %>
</html>
